<Window x:Class="DiscordCache.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscordCache"
        mc:Ignorable="d"
        Title="MainWindow" Height="256" Width="352">
    <Grid Background="#FF424242">
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="174*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="FileEndButton1" Content="Convert" HorizontalAlignment="Left" Margin="67,109,0,0" VerticalAlignment="Top" Width="84" Click="FileEndButton1_Click" Height="20" Grid.Row="1" Grid.Column="2" Background="#FFFFA7A7"/>
        <Label x:Name="FileFormatText" Content="" HorizontalAlignment="Left" Margin="152,75,0,0" VerticalAlignment="Top" Width="172" Background="White" Height="26" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Label Content="What format are the files?" HorizontalAlignment="Left" Margin="6,76,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="165" Foreground="White" Height="26" Grid.Row="1"/>
        <Label x:Name="Label_Path" Content="Folder path:" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" Foreground="White" Grid.ColumnSpan="3" Width="283" Height="24" Grid.RowSpan="2"/>
        <TextBox x:Name="TextBox_FolderPath" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" Grid.Row="1" Text="TextBox" VerticalAlignment="Top" Width="314" Grid.ColumnSpan="3" MaxLines="1"/>
        <Button x:Name="FolderOpenButton" Content="Open Folder" HorizontalAlignment="Left" Margin="9,38,0,0" VerticalAlignment="Top" Width="75" Click="FolderOpenButton_Click" Height="20" Grid.Row="1"/>
        <TextBox x:Name="FileEndTextBox" HorizontalAlignment="Left" Height="23" Margin="152,107,0,0" Grid.Row="1" Text=".png" VerticalAlignment="Top" Width="74" MaxLines="1" Grid.ColumnSpan="3"/>
        <Label Content="Change file extensions to:" HorizontalAlignment="Left" Margin="6,105,0,0" VerticalAlignment="Top" Width="146" Foreground="White" Height="26" Grid.Row="1"/>
        <Button x:Name="FileEndButton2" Content="To File" HorizontalAlignment="Left" Margin="67,140,0,0" VerticalAlignment="Top" Width="84" Click="FileEndButton2_Click" Height="20" Grid.Row="1" Grid.Column="2" Background="#FFFFA7A7"/>
        <Label Content="Remove file extensions" HorizontalAlignment="Left" Margin="6,134,0,0" VerticalAlignment="Top" Width="146" Foreground="White" Height="26" Grid.Row="1"/>
        <Button x:Name="LoadFolderButton" Content="Load Folder" HorizontalAlignment="Left" Margin="88,38,0,0" VerticalAlignment="Top" Width="76" Click="LoadFolderButton_Click" Height="20" Grid.Row="1"/>

    </Grid>
</Window>
