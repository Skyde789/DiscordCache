<Window x:Class="DiscordCache.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscordCache"
        mc:Ignorable="d"
        Title="MainWindow" Height="205.554" Width="342.896">
    <Grid Background="#FF424242">
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="76*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button_PNG" Content="To PNG" HorizontalAlignment="Left" Margin="32,102.382,0,0" VerticalAlignment="Top" Width="75" Click="Button_PNG_Click" Height="20" Grid.Row="1"/>
        <Button x:Name="Button_File" Content="To File" HorizontalAlignment="Left" Margin="26,102.382,0,0" VerticalAlignment="Top" Width="75" Click="Button_File_Click" Grid.Column="2" Height="20" Grid.Row="1"/>
        <Label x:Name="Test_Copy" Content="" HorizontalAlignment="Left" Margin="10,71.382,0,0" VerticalAlignment="Top" Width="91" Background="White" Grid.Column="2" Height="26" Grid.Row="1"/>
        <Label Content="Are the files in PNG format?" HorizontalAlignment="Left" Margin="32,71.382,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="165" Foreground="White" Height="26" Grid.Row="1"/>
        <Label x:Name="Label_Path" Content="Folder path:&#xD;&#xA;(Change if necessary, shouldnt be though)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" Grid.ColumnSpan="3" Width="283" Height="41" Grid.RowSpan="2"/>
        <TextBox x:Name="TextBox_FolderPath" HorizontalAlignment="Left" Height="23" Margin="10,34,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="310" Grid.ColumnSpan="3"/>
        <Button x:Name="Button_Open" Content="Open Folder" HorizontalAlignment="Left" Margin="117,103,0,0" VerticalAlignment="Top" Width="75" Click="Button_Open_Click" Height="20" Grid.Row="1" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
